<p id="notice"><%= notice %></p>

<h1>Todo lists</h1>

<table class="table">
  <thead class="thead-dark">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Priority</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @list.each do |list| %>
    <tr>
      <td><%= list.title %></td>
      <td><%= list.description %></td>
      <td><%= list.priority %></td>
      <td><%= link_to 'Show', list %></td>
      <td><%= link_to 'Edit', edit_todo_list_path(list) %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>



